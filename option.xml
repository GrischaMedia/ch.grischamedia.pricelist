<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/vortex/option.xsd">
	<import>
		<categories>
			<category name="pricelist">
			</category>
			
			<category name="pricelist.product">
				<parent>pricelist</parent>
			</category>
			
			<category name="pricelist.currency">
				<parent>pricelist</parent>
			</category>
		</categories>
		
		<options>
			<option name="pricelist_excerpt_length">
				<categoryname>pricelist.product</categoryname>
				<optiontype>integer</optiontype>
				<minvalue>50</minvalue>
				<defaultvalue>250</defaultvalue>
				<maxvalue>50000</maxvalue>
				<suffix>chars</suffix>
			</option>
			
			<option name="pricelist_available_currencies">
				<categoryname>pricelist.currency</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue>CHF</defaultvalue>
				<validationpattern>(^$|^[A-Z]{3}(\r?\n[A-Z]{3})*$)</validationpattern>
			</option>
		</options>
	</import>
</data>
